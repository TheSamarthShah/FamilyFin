{
  "expo": {
    "name": "family-fin",
    "slug": "family-fin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/adaptive-icon.png",
    "scheme": "familyfin",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.familyfin",
      "buildNumber": "1.0.0"
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.familyfin",
      "versionCode": 1,
      "permissions": [],
      "edgeToEdgeEnabled": true
    },
    
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "startUrl": "/",
      "lang": "en"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/splash-dark.png",
            "backgroundColor": "#121212"
          }
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": true
    }
  }
}